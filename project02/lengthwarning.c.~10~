#include <stdio.h> 

int main(void) {
  char ch;
  char arr[1000];
  int length = 0;
  int number = 0;
  int i = 0; 
  int j; 
  int k;

  while (!feof(stdin)) {
    number++;
    while (ch != '\n') {
      scanf("%c", &ch);
      arr[length] = ch;
      length++;
    }
    arr[length] = '\n';
    length++;
    
    if (length <= 80) {
	printf(" "); 
      } else {
	printf("*");  
      }
      printf("%5d", number); 
      printf(": ");

    while (i < length) {
      printf("%c", arr[i]);
      i++;
    }

    if (length > 80) {
      for (j = 1; j <= 88; j++) {
        printf(" "); 
      }
      for (k = 89; k <= length; k++) {
	printf("^");
      }
    }
    length = 0;
  } 
  return 0;
}
